{
  "openapi": "3.0.0",
  "info": {
    "title": "User manager API",
    "description": "An simple api to manage users",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0",
    "contact": {
      "name": "Juca Sauro",
      "email": "juca.sauro@gmail.com"
    }
  },
  "tags": [
    {
      "name": "Users",
      "description": "Gerenciamento de usuários"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Criação de um novo usuário",
        "description": "Cria um novo usuário informando o nome e email.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                },
                "example": {
                  "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                  "name": "Rocketseat",
                  "email": "ola@rocketseat.com.br",
                  "admin": "false",
                  "created_at": "2021-03-30T12:50:33.283Z",
                  "updated_at": "2021-03-30T12:50:33.283Z"
                }
              }
            }
          },
          "400": {
            "description": "O e-mail já está sendo utilizado em outro cadastro",
            "content": {
              "application/json": {
                "example": {
                  "error": "This e-mail is already in use"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Listagem de todos os usuários",
        "description": "Lista todos os usuários cadastrados",
        "parameters": [
          {
            "name": "user_id",
            "description": "ID do usuário",
            "allowEmptyValue": false,
            "required": true,
            "in": "header",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                },
                "example": [
                  {
                    "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                    "name": "Rocketseat",
                    "email": "ola@rocketseat.com.br",
                    "admin": "false",
                    "created_at": "2021-03-30T12:50:33.283Z",
                    "updated_at": "2021-03-30T12:50:33.283Z"
                  },
                  {
                    "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                    "name": "Juca Sauro",
                    "email": "juca.sauro@gmail.com",
                    "admin": "false",
                    "created_at": "2021-03-30T12:50:33.283Z",
                    "updated_at": "2021-03-30T12:50:33.283Z"
                  }
                ]
              }
            }
          },
          "400": {
            "description": "O usuário não é um administrador",
            "content": {
              "application/json": {
                "example": {
                  "error": "User is not an admin"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado.",
            "content": {
              "application/json": {
                "example": {
                  "error": "User not found"
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Retorna o profile do usuário",
        "description": "Retorna o usuário informado no parâmetro da rota",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "description": "ID do usuário",
            "allowEmptyValue": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "example": {
                  "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                  "name": "Rocketseat",
                  "email": "ola@rocketseat.com.br",
                  "admin": "false",
                  "created_at": "2021-03-30T12:50:33.283Z",
                  "updated_at": "2021-03-30T12:50:33.283Z"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "example": {
                  "error": "User not found"
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "summary": "Alterar usuário para administrador",
        "description": "Altera usuário informado para administrador",
        "tags": [
          "users"
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "description": "ID do usuário",
            "allowEmptyValue": false,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Operação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "id": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string",
                      "format": "email"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "created_at": {
                      "type": "string",
                      "format": "date-time"
                    },
                    "updated_at": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                },
                "example": {
                  "id": "3fa85f64-5717-4562-b3fc-2c963f66afa6",
                  "name": "Juca Sauro",
                  "email": "juca.sauro@gmail.com",
                  "admin": "true",
                  "created_at": "2021-03-30T12:50:33.283Z",
                  "updated_at": "2021-03-30T12:50:33.283Z"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "User not found"
                }
              }
            }
          }
        }
      }
    }
  }
}